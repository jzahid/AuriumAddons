<?xml version="1.0" ?>
<odoo>
  <data>

    <record id="pricelist_item_line_view_tree" model="ir.ui.view">
      <field name="name">pricelist.item.line.list</field>
      <field name="model">product.pricelist.item</field>
      <field name="priority">20</field>
      <field name="arch" type="xml">
        <tree string="Pricelist Line" create="false" delete="false" edit="false">
           <field name="pricelist_id"/>
           <field name="product_id"/>
           <field name="min_quantity"/>
           <field name="fixed_price"/>
           <field name="date_start"/>
           <field name="date_end"/>
           <field name="compute_price"/>
        </tree>
      </field>
    </record>

  
    <record id="pricelist_item_line_view_search" model="ir.ui.view">
      <field name="name">pricelist.item.line.filter</field>
      <field name="model">product.pricelist.item</field>
      <field name="priority">20</field>
      <field name="arch" type="xml">
        <search string="Search Pricelist Lines">
          <separator/>
          <field name="pricelist_id"/>
          <separator/>
          <!--<filter name="out_invoice" string="Customer Invoice" domain="[('invoice_type','=','out_invoice')]"/>-->

          <group expand="0" string="Group By">
            <filter string="Product" context="{'group_by':'pricelist_id'}"/>
          </group>

        </search>
      </field>
    </record>

    <record id="pricelist_item_line_view_action" model="ir.actions.act_window">
      <field name="name">Pricelist Lines</field>
      <field name="res_model">product.pricelist.item</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="pricelist_item_line_view_search"/>
    </record>

    <record id="pricelist_item_line_view_action_tree" model="ir.actions.act_window.view">
      <field eval="1" name="sequence"/>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="pricelist_item_line_view_tree"/>
      <field name="act_window_id" ref="pricelist_item_line_view_action"/>
    </record>

  

    <menuitem id="pricelist_line_view_menu"
              name="Pricelist Lines"
              parent="sale.menu_product_pricelist_main"
              action="pricelist_item_line_view_action"
              sequence="500"/>

  </data>
</odoo>
